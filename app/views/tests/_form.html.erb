<%= simple_form_for @test, url: url do |f| %>

  <div class="form-inputs">
    <%= f.input :date, as: :date_picker %>
    <%= f.input :title %>
    <%= f.input :min %>
    <%= f.input :max %>
  </div>

  <div class="actions text-right">
    <%= link_to t(:cancel), courses_path, class: "btn btn-secondary" %>
    <%= f.button :submit, class: "btn-primary" %>
  </div>
<% end %>
