
<% content_for :breadcrumb do %>
  <li class="breadcrumb-item" aria-current="page">
    <%= link_to courses_path do %>
      <i class="material-icons">school</i>
      <%= t "courses" %>
    <% end %>
  </li>
  <li class="breadcrumb-item active" aria-current="page">
    <%= @course.year %>
  </li>
<% end %>


<% content_for :content do %>
  <div class="actions mb-3 text-right">
    <%= link_to t('courses.enroll'), new_course_enrollment_path(@course),
                                     class: "btn btn-primary" %>
  </div>
  <div class="card hoverable">
    <div class="card-body">
      <table class="table test-table table-bordered 
                    table-striped table-hover table-responsive">
        <thead>
          <tr>
            <th colspan="3"><%= t 'students.title' %></th>
            <th rowspan="2" class="test">
              <span>20/09/2011</span>
              <h2>Unit Testing</h2>
              <test-entry>
                <span>Resultado</span>
                <grade>Nota</grade>
              </test-entry>
            </th>
            <th rowspan="2" class="test">
              <span>16/11/2011</span>
              <h2>Rails</h2>
              <test-entry>
                <span>Resultado</span>
                <grade>Nota</grade>
              </test-entry>
            </th>
          </tr>
          <tr>
            <th name="name"><%= t 'students.full_name' %></th>
            <th name="legajo"><%= t 'sudents.number' %></th>
            <th name="legajo"><%= t 'sudents.denroll' %></th>
          </tr>
        </thead>
        <tbody>
          <% @course.sorted_enrollments.each do |enrollment| %>
          <tr>
            <td><%= enrollment.full_name %></td>
            <td><%= enrollment.number %></td>
            <td>
              <%= link_to course_enrollment_path(@course, enrollment),
                  class: 'btn btn-danger', method: :delete, 
                  data: { confirm: 'Are you sure?' } do %>
                <i class="material-icons">delete</i>
              <% end %>
            </td>
            <td class="test text-success">
              <test-entry>
                <span>Aprobado</span>
                <grade>9</grade>
              </test-entry>
            </td>
            <td class="test text-success">
              <test-entry>
                <span>Aprobado</span>
                <grade>14</grade>
              </test-entry>
            </td>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="3">Porcentaje Aprobado</th>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th colspan="3">Porcentaje Rendido</th>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th colspan="3">Nota de Aprobaci√≥n</th>
            <td></td>
            <td></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
<% end %>


<%= render "layout" %>