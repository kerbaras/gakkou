<% content_for :breadcrumb do %>
  <li class="breadcrumb-item active" aria-current="page">
    <i class="material-icons">contacts</i>
    <%= t 'students.title' %>
  </li>
<% end %>

<% content_for :content do %>
  <div class="card">
    <div class="card-body">
      <%= link_to t('students.add'), new_student_path, class: "btn btn-primary"  %>
    </div>
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th><%= t 'students.name' %></th>
            <th><%= t 'students.lastname' %></th>
            <th><%= t 'students.identification' %></th>
            <th><%= t 'students.number' %></th>
            <th><%= t 'students.actions' %></th>
          </tr>
        </thead>
        <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.lastname %></td>
            <td><%= student.identification %></td>
            <td><%= student.number %></td>
            <td>
              <%= link_to t('edit'), edit_student_path(student) %>
              <%= link_to t('destroy'), student, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
<%= render "layout" %>